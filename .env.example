# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon/Public Key (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# OPENROUTER CONFIGURATION (Recommended)
# ============================================
# Get your API key from: https://openrouter.ai/keys

# OpenRouter API Key
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# OpenRouter Model (optional - defaults to claude-3.5-sonnet)
# See available models: https://openrouter.ai/models
# Popular options:
#   - anthropic/claude-3.5-sonnet (recommended, best quality)
#   - anthropic/claude-3-haiku (fast and cheap)
#   - openai/gpt-4-turbo (good quality)
#   - openai/gpt-3.5-turbo (cheapest)
#   - google/gemini-pro-1.5 (free tier available)
#   - meta-llama/llama-3.1-70b-instruct (open source)
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ============================================
# APPLICATION SETTINGS
# ============================================

# Node Environment
NODE_ENV=development

# Application URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# ALTERNATIVE: DIRECT AI PROVIDERS (Optional)
# ============================================
# If you prefer to use AI providers directly instead of OpenRouter

# OpenAI (if not using OpenRouter)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini (if not using OpenRouter)
# GOOGLE_AI_API_KEY=your-gemini-api-key-here

# Anthropic Claude (if not using OpenRouter)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# OPTIONAL: LINKEDIN SCRAPING
# ============================================

# If you want to use a scraping service (optional)
# SCRAPING_API_KEY=your-scraping-service-key

# ============================================
# OPTIONAL: ANALYTICS
# ============================================

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# OPTIONAL: ERROR TRACKING
# ============================================

# Sentry (optional)
# SENTRY_DSN=your-sentry-dsn
